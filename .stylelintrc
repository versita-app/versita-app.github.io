{
  "extends": "stylelint-config-standard",
  "rules": {
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "extends",
        "ignores"
      ]
    }],
    "number-leading-zero": null,
    "unit-blacklist": [
      ["px", "pt"],
      {
        "ignoreMediaFeatureNames": {
          "px": [ "min-width", "max-width", "resolution", "min-device-width", "max-device-width", "min-resolution", "max-resolution"]
        }
      }
    ]
  }
}
